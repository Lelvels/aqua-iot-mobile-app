<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    >

    <TextView android:id="@+id/add_fish_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:lineSpacingExtra="10sp"
        android:text="Thêm loại cá mới"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold" />
    <EditText
        android:id="@+id/add_fish_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        android:hint="Tên cá"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/add_fish_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="5sp"
        android:textColor="@color/white"
        android:gravity="top"
        android:hint="Mô tả về cá"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/add_fish_max_Ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="5sp"
        android:gravity="top"
        android:textColor="@color/white"
        android:hint="pH tối đa"
        android:inputType="numberDecimal"
        android:textSize="20sp" />
    <EditText
        android:id="@+id/add_fish_min_Ph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:textColor="@color/white"
        android:hint="pH tối thiểu"
        android:layout_marginTop="5sp"
        android:inputType="numberDecimal"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/add_fish_max_Temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Nhiệt độ tối đa"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        android:inputType="numberDecimal"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/add_fish_min_Temperature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:textColor="@color/white"
        android:hint="Nhiệt độ tối thiểu"
        android:layout_marginTop="5sp"
        android:inputType="numberDecimal"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/add_fish_max_Tds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:textColor="@color/white"
        android:hint="Tds tối đa"
        android:layout_marginTop="5sp"
        android:inputType="numberDecimal"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/add_fish_min_Tds"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:hint="Tds tối thiểu"
        android:textColor="@color/white"
        android:layout_marginTop="5sp"
        android:inputType="numberDecimal"
        android:textSize="20sp"/>
</LinearLayout>