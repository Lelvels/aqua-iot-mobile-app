<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".FishForAquariumActivity"
    android:background="@color/slight_blue">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_vertical_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_horizontal_begin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_horizontal_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="20dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="20dp"
        app:layout_constraintGuide_percent="0.75" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/af_recycle_view"
        android:layout_width="0dp"
        android:layout_height="600dp"
        app:layout_constraintEnd_toStartOf="@+id/gl_vertical_end"
        app:layout_constraintStart_toStartOf="@+id/gl_vertical_begin"
        app:layout_constraintTop_toTopOf="@+id/gl_horizontal_begin"
        android:background="@color/white">
    </androidx.recyclerview.widget.RecyclerView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_groups"
        android:layout_width="0sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:backgroundTint="@color/white"
        app:layout_constraintEnd_toStartOf="@+id/gl_vertical_end"
        app:layout_constraintStart_toStartOf="@+id/gl_vertical_begin"
        app:layout_constraintTop_toBottomOf="@+id/af_recycle_view">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="right">

            <Button
                android:id="@+id/af_go_back_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30sp"
                android:textSize="11sp"
                android:backgroundTint="@color/do_huong"
                android:text="@string/button_go_back"
                android:textColor="@color/white"/>

            <Button
                android:id="@+id/af_confirm_buton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:backgroundTint="@color/do_huong"
                android:text="@string/button_confirm"
                android:textColor="@color/white"/>

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>